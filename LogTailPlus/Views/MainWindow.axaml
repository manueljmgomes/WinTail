<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LogTailPlus.ViewModels"
        xmlns:views="using:LogTailPlus.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="LogTailPlus.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="LogTailPlus"
        Width="1200" Height="700"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaTitleBarHeightHint="40">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <!-- Modern Windows 11 Styles -->
        <Style Selector="Window">
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
        </Style>
        
        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
        </Style>
        
        <Style Selector="Button.toolbar">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
        </Style>
        
        <Style Selector="Button.toolbar:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
        </Style>
        
        <Style Selector="Button.toolbar:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListMediumBrush}"/>
        </Style>
        
        <Style Selector="Button.close-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style Selector="Button.close-button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#20FFFFFF"/>
        </Style>
        
        <Style Selector="Button.close-button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#30FFFFFF"/>
        </Style>
    </Window.Styles>

    <!-- Main Content with Acrylic Background -->
    <Panel>
        <!-- Background with semi-transparency -->
        <Border Background="#F3F3F3" Opacity="0.95" CornerRadius="8"/>
        
        <DockPanel Margin="0,40,0,0">
            <!-- Custom Title Bar Area (top 40px is reserved) -->
            
            <!-- Toolbar -->
            <Border DockPanel.Dock="Top" 
                    Background="#FAFAFA"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,0,1"
                    Padding="12"
                    CornerRadius="8,8,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Open Log..." 
                            Classes="toolbar"
                            Command="{Binding OpenFileCommand}"
                            CommandParameter="{Binding $parent[Window]}"/>
                    <Rectangle Width="1" Height="24" Fill="#E0E0E0" VerticalAlignment="Center" Margin="8,0"/>
                    <TextBlock Text="LogTailPlus" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="#2C2C2C"/>
                    <TextBlock Text="Modern Log Viewer" 
                               VerticalAlignment="Center"
                               FontSize="13"
                               Foreground="#6C6C6C"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Grid Background="#FFFFFF">
                <!-- TabControl for log files -->
                <TabControl ItemsSource="{Binding Tabs}"
                           SelectedItem="{Binding SelectedTab}"
                           IsVisible="{Binding !HasNoTabs}"
                           TabStripPlacement="Top"
                           Background="Transparent"
                           Padding="8,8,8,0">
                    <TabControl.ItemTemplate>
                        <DataTemplate DataType="vm:LogTabViewModel">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6z M6 4h7v5h5v10H6V4z"
                                         Width="14" Height="14"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource SystemAccentColor}"/>
                                <TextBlock Text="{Binding DisplayTitle}" 
                                          VerticalAlignment="Center"
                                          FontSize="13"/>
                                <Button Classes="close-button"
                                       Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CloseTabCommand}"
                                       CommandParameter="{Binding}"
                                       ToolTip.Tip="Close tab">
                                    <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                             Width="10" Height="10"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate DataType="vm:LogTabViewModel">
                            <Border Background="#FAFAFA" 
                                    CornerRadius="0,0,4,4"
                                    Margin="0,4,0,0">
                                <!-- USE SIMPLE VERSION TEMPORARY -->
                                <views:LogTabViewSimple DataContext="{Binding}"/>
                            </Border>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>

                <!-- Empty State with Modern Design -->
                <StackPanel IsVisible="{Binding HasNoTabs}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Spacing="24"
                           Margin="40">
                    <Border Background="#F0F0F0"
                            CornerRadius="50"
                            Width="100" Height="100"
                            HorizontalAlignment="Center">
                        <PathIcon Data="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6z M6 4h7v5h5v10H6V4z M8 13h8v2H8v-2z M8 9h8v2H8V9z"
                                 Width="48" Height="48"
                                 Foreground="{DynamicResource SystemAccentColor}"/>
                    </Border>
                    
                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                        <TextBlock Text="No log files open" 
                                  FontSize="24"
                                  FontWeight="SemiBold"
                                  HorizontalAlignment="Center"
                                  Foreground="#2C2C2C"/>
                        <TextBlock Text="Open a log file to get started" 
                                  FontSize="14"
                                  Foreground="#6C6C6C"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Content="Open Log File..." 
                           HorizontalAlignment="Center"
                           Padding="24,12"
                           FontSize="14"
                           CornerRadius="6"
                           Command="{Binding OpenFileCommand}"
                           CommandParameter="{Binding $parent[Window]}"/>
                </StackPanel>
            </Grid>
        </DockPanel>
        
        <!-- Custom Title Bar Overlay -->
        <Grid Height="40" VerticalAlignment="Top" Background="Transparent">
            <TextBlock Text="LogTailPlus"
                      FontSize="12"
                      FontWeight="SemiBold"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Margin="16,0,0,0"
                      Foreground="#2C2C2C"/>
        </Grid>
    </Panel>

</Window>
